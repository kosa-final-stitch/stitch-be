    <!-- 신고 데이터 삽입 -->
    <insert id="insertReport" parameterType="org.mywork.stitchbe.dto.board.ReportDto">
        INSERT INTO report (
            member_id,
            post_or_comment,
            board_table,
            board_id,
            comment_id,
            type,
            reason,
            content,
            regdate
        ) VALUES (
                     #{memberId},
                     #{postOrComment},
                     #{boardTable},
                     #{boardId},
                     #{commentId},
                     #{type},
                     #{reason},
                     #{content},
                     SYSDATE
                 )
    </insert>

